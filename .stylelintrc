{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extends",
          "ignores",
          "use",
          "forward",
          "function",
          "if",
          "else",
          "error",
          "return",
          "mixin",
          "include",
          "extend"
        ]
      }
    ],
    "string-quotes": "single"
  }
}
